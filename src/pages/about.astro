---
import { Image } from 'astro:assets';
import meImg from '@/assets/about/me.jpg';
import Button from '@/components/ui/Button.astro';
import Heading from '@/components/ui/Heading.astro';
import SkillItem from '@/components/ui/SkillItem.astro';
import Layout from '@/layouts/Layout.astro';

const skills = [
	{ icon: 'html5' as const, name: 'HTML / CSS', years: '8年' },
	{ icon: 'javascript' as const, name: 'JavaScript', years: '8年' },
	{ icon: 'typescript' as const, name: 'TypeScript', years: '2年' },
	{ icon: 'react' as const, name: 'React / Next.js', years: '2年' },
	{ icon: 'astro' as const, name: 'Astro', years: '4年' },
	{ icon: 'wordpress' as const, name: 'WordPress', years: '4年' },
	{ icon: 'microcms' as const, name: 'microCMS', years: '4年' },
	{ icon: 'postgresql' as const, name: 'PostgreSQL', years: '4年' },
	{ icon: 'docker' as const, name: 'Docker', years: '2年' },
];
---

<Layout title="About | うぇぶまか" description="うぇぶまかの運営者、平井隆裕のプロフィール。フロントエンドエンジニアとしてWebサイト制作・LP制作を行っています。">
  <section aria-label="自己紹介" class="pt-[calc(var(--spacing-15)+var(--height-header-mobile))] pb-15 sm:py-15 md:py-20 bg-bg-main">
    <div class="max-w-3xl mx-auto px-4">
      <Heading level={1} variant="page" class="mb-12">About</Heading>

      <div class="flex flex-col gap-12">
        <div class="flex flex-col items-center gap-6 md:flex-row md:gap-8">
          <div class="shrink-0">
            <Image src={meImg} alt="平井 隆裕" width={320} height={320} format="webp" quality={80} class="w-40 h-40 rounded-full border-3 border-primary object-cover" />
          </div>

          <div class="text-center md:text-left">
            <p class="text-2xl font-bold text-text mb-2">平井 隆裕</p>
            <p class="text-base text-primary font-medium">フロントエンドエンジニア</p>
          </div>
        </div>

        <div>
          <Heading level={2} variant="bordered" class="mb-4">自己紹介</Heading>
          <p class="text-text leading-relaxed-plus mb-4">
            東京でフロントエンドエンジニアをしております。
          </p>
          <p class="text-text leading-relaxed-plus mb-4">
            2018年より福井県でSEの会社に勤める。<br>
            2022年からWebサイト制作会社でWeb制作業務を行う。<br>
            2024年より東京で事業会社のフロントエンドエンジニアへ転向。
          </p>
          <p class="text-text leading-relaxed-plus">
            仕事のご依頼は<a href="/contact" class="text-primary underline underline-offset-4">お問い合わせフォーム</a>からお願いいたします。
          </p>
        </div>

        <div>
          <Heading level={2} variant="bordered" class="mb-4">スキル・経験</Heading>

          <div class="grid gap-x-8 md:grid-cols-2">
            <div>
              {skills.slice(0, 5).map((skill, index) => (
                <SkillItem
                  icon={skill.icon}
                  name={skill.name}
                  years={skill.years}
                  showDivider={index < 4}
                />
              ))}
            </div>
            <div>
              {skills.slice(5).map((skill, index) => (
                <SkillItem
                  icon={skill.icon}
                  name={skill.name}
                  years={skill.years}
                  showDivider={index < skills.slice(5).length - 1}
                />
              ))}
            </div>
          </div>
        </div>
      </div>

      <div class="mt-16 text-center">
        <Button href="/contact" variant="cta" size="lg" icon="mail">お問い合わせはこちら</Button>
      </div>
    </div>
  </section>
</Layout>
