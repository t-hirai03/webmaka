---
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	title: string;
	description?: string;
	noindex?: boolean;
}

const { title, description, noindex = false } = Astro.props;

const defaultDescription = 'Webサイト制作・LP制作ならうぇぶまか。デザインからコーディングまで一貫対応。お気軽にご相談ください。';
const metaDescription = description || defaultDescription;
const siteUrl = Astro.site?.href || 'https://webmaka.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link rel="canonical" href={canonicalUrl.href} />
    <meta name="description" content={metaDescription} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <title>{title}</title>
    <!-- JSON-LD 構造化データ -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "うぇぶまか",
      "url": siteUrl,
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "うぇぶまか",
      "url": siteUrl,
      "description": defaultDescription,
      "priceRange": "¥30,000〜",
      "areaServed": "JP",
      "serviceType": ["Webサイト制作", "LP制作", "CMS導入", "コーディング代行"],
    })} />
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-YEDJ65JEPR"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-YEDJ65JEPR');
    </script>
  </head>
  <body class="min-h-dvh bg-bg-main text-text font-sans leading-relaxed">
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
