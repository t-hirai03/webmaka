---
import { ClientRouter } from 'astro:transitions';
import '@/styles/tailwind.css';
import Header from '@/components/Header.astro';

interface Props {
	title: string;
	description?: string;
	noindex?: boolean;
}

const { title, description, noindex = false } = Astro.props;

const defaultDescription =
	'Webサイト制作・LP制作ならうぇぶまか。デザインからコーディングまで一貫対応。お気軽にご相談ください。';
const metaDescription = description || defaultDescription;
const siteUrl = Astro.site?.href || 'https://webmaka.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
const ogImageUrl = new URL('/images/common/ogp.png', siteUrl);

// ナビゲーション構造（サイトリンク用）
const siteNavigation = [
	{ name: 'サービス', url: '/#service' },
	{ name: '制作実績', url: '/#works' },
	{ name: '自己紹介', url: '/about' },
	{ name: 'お問い合わせ', url: '/contact' },
];

// パンくずリスト自動生成
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbItems = [
	{ name: 'ホーム', url: siteUrl },
	...pathSegments.map((segment: string, index: number) => {
		const url = new URL(`/${pathSegments.slice(0, index + 1).join('/')}`, siteUrl).href;
		const nameMap: Record<string, string> = {
			about: '自己紹介',
			contact: 'お問い合わせ',
			confirm: '確認',
			thanks: '完了',
		};
		return { name: nameMap[segment] || segment, url };
	}),
];

// 構造化データ
const structuredData = {
	webSite: {
		'@context': 'https://schema.org',
		'@type': 'WebSite',
		name: 'うぇぶまか',
		url: siteUrl,
	},
	organization: {
		'@context': 'https://schema.org',
		'@type': 'Organization',
		name: 'うぇぶまか',
		url: siteUrl,
		logo: new URL('/images/common/logo.jpg', siteUrl).href,
		description: defaultDescription,
		foundingDate: '2024',
		areaServed: 'JP',
		contactPoint: {
			'@type': 'ContactPoint',
			contactType: 'customer support',
			url: new URL('/contact', siteUrl).href,
			availableLanguage: 'Japanese',
		},
	},
	professionalService: {
		'@context': 'https://schema.org',
		'@type': 'ProfessionalService',
		name: 'うぇぶまか',
		url: siteUrl,
		description: defaultDescription,
		priceRange: '¥30,000〜',
		areaServed: 'JP',
		serviceType: ['Webサイト制作', 'LP制作', 'CMS導入', 'コーディング代行'],
	},
	siteNavigationElement: {
		'@context': 'https://schema.org',
		'@graph': siteNavigation.map((item) => ({
			'@type': 'SiteNavigationElement',
			name: item.name,
			url: new URL(item.url, siteUrl).href,
		})),
	},
	breadcrumbList:
		pathSegments.length > 0
			? {
					'@context': 'https://schema.org',
					'@type': 'BreadcrumbList',
					itemListElement: breadcrumbItems.map((item, index) => ({
						'@type': 'ListItem',
						position: index + 1,
						name: item.name,
						item: item.url,
					})),
				}
			: null,
};
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="canonical" href={canonicalUrl.href} />
    <!-- Google Fonts - Noto Sans JP -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" />
    <!-- フォントのPreload - Zen Maru Gothic（セクションタイトル用） -->
    <link rel="preload" href="/fonts/ZenMaruGothic-Bold-subset.woff2" as="font" type="font/woff2" crossorigin />
    <!-- Client Router (View Transitions) -->
    <ClientRouter />
    <meta name="description" content={metaDescription} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <title>{title}</title>
    <!-- OGP -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={ogImageUrl.href} />
    <meta property="og:site_name" content="うぇぶまか" />
    <meta property="og:locale" content="ja_JP" />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImageUrl.href} />
    <!-- JSON-LD 構造化データ -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData.webSite)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData.organization)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData.professionalService)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData.siteNavigationElement)} />
    {structuredData.breadcrumbList && (
      <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData.breadcrumbList)} />
    )}
    <!-- Google Analytics -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-YEDJ65JEPR"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-YEDJ65JEPR');
    </script>
  </head>
  <body class="min-h-dvh bg-bg-main text-text font-sans leading-relaxed">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-white focus:rounded-md"
    >
      コンテンツにスキップ
    </a>
    <Header />
    <main id="main-content" class="ps-0 lg:ps-sidebar">
      <slot />
    </main>
  </body>
</html>
