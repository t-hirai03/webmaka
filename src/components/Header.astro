---
const navItems = [
  { href: '#service', label: 'Service' },
  { href: '#flow', label: 'Flow' },
  { href: '#works', label: 'Works' },
  { href: '#contact', label: 'Contact' },
];
---

<header class="header">
  <nav class="header__nav" aria-label="メインナビゲーション">
    <a href="/" class="header__logo">
      うぇぶまか
    </a>

    <!-- Desktop Navigation -->
    <ul class="header__menu">
      {navItems.map((item) => (
        <li class="header__menu-item">
          <a href={item.href} class="header__menu-link">
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile Hamburger Menu -->
    <details class="header__mobile-menu">
      <summary class="header__hamburger" aria-label="メニューを開く">
        <span class="header__hamburger-line"></span>
        <span class="header__hamburger-line"></span>
        <span class="header__hamburger-line"></span>
      </summary>
      <div class="header__mobile-dropdown">
        <ul class="header__mobile-list">
          {navItems.map((item) => (
            <li>
              <a href={item.href} class="header__mobile-link">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </details>
  </nav>
</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="header-spacer"></div>

<style>
  .header {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 50;
    background-color: rgb(255 255 255 / 0.95);
    backdrop-filter: blur(4px);
  }

  .header__nav {
    max-width: var(--container-max);
    margin-inline: auto;
    padding-inline: 1rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header__logo {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
    text-decoration: none;
  }

  .header__menu {
    display: none;
    list-style: none;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }

  @media (min-width: 768px) {
    .header__menu {
      display: flex;
    }
  }

  .header__menu-link {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .header__menu-link:hover {
    color: var(--color-primary);
  }

  .header__mobile-menu {
    position: relative;
  }

  @media (min-width: 768px) {
    .header__mobile-menu {
      display: none;
    }
  }

  .header__hamburger {
    list-style: none;
    cursor: pointer;
    padding: 0.5rem;
    margin-inline-end: -0.5rem;
  }

  .header__hamburger-line {
    display: block;
    width: 1.5rem;
    height: 2px;
    background-color: var(--color-text);
    margin-block-end: 0.375rem;
    transition: transform 0.2s, opacity 0.2s;
  }

  .header__hamburger-line:last-child {
    margin-block-end: 0;
  }

  .header__mobile-menu[open] .header__hamburger-line:nth-child(1) {
    transform: rotate(45deg) translateY(0.5rem);
  }

  .header__mobile-menu[open] .header__hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .header__mobile-menu[open] .header__hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translateY(-0.5rem);
  }

  .header__mobile-dropdown {
    position: absolute;
    top: 4rem;
    left: calc(-100vw + 100% + 1rem);
    right: -1rem;
    background-color: var(--color-bg-main);
    border-block-start: 1px solid var(--color-bg-section);
    box-shadow: 0 4px 6px rgb(0 0 0 / 0.1);
  }

  .header__mobile-list {
    list-style: none;
    margin: 0;
    padding-block: 1rem;
    padding-inline: 0;
  }

  .header__mobile-link {
    display: block;
    padding-block: 0.75rem;
    padding-inline: 1.5rem;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s, background-color 0.2s;
  }

  .header__mobile-link:hover {
    color: var(--color-primary);
    background-color: var(--color-bg-section);
  }

  .header-spacer {
    height: 4rem;
  }
</style>
