---
const navItems = [
  {
    href: '#service',
    label: 'Service',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>`
  },
  {
    href: '#flow',
    label: 'Flow',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="5" r="3"/><line x1="12" y1="8" x2="12" y2="14"/><circle cx="12" cy="19" r="3"/><line x1="12" y1="16" x2="12" y2="14"/></svg>`
  },
  {
    href: '#works',
    label: 'Works',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>`
  },
  {
    href: '#contact',
    label: 'Contact',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>`
  },
];
---

<header class="header">
  <!-- Desktop: Sidebar -->
  <nav class="header__sidebar" aria-label="メインナビゲーション">
    <a href="/" class="header__logo">
      <span class="header__logo-text">うぇぶ<br>まか</span>
    </a>

    <ul class="header__menu">
      {navItems.map((item) => (
        <li class="header__menu-item">
          <a href={item.href} class="header__menu-link">
            <span class="header__icon" set:html={item.icon} />
            <span class="header__label">{item.label}</span>
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <!-- Mobile: Hamburger Button Only -->
  <details class="header__mobile">
    <summary class="header__hamburger" aria-label="メニューを開く">
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
    </summary>
    <div class="header__dropdown">
      <ul class="header__dropdown-list">
        {navItems.map((item) => (
          <li>
            <a href={item.href} class="header__dropdown-link">
              <span class="header__dropdown-icon" set:html={item.icon} />
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </details>
</header>

<style>
  /* ================================
     Desktop Sidebar
     ================================ */
  .header__sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100dvh;
    background-color: var(--color-primary);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-block: 1.5rem;
    z-index: 50;
  }

  @media (max-width: 767px) {
    .header__sidebar {
      display: none;
    }
  }

  .header__logo {
    text-decoration: none;
    margin-block-end: 2rem;
  }

  .header__logo-text {
    font-size: 0.875rem;
    font-weight: 700;
    color: #fff;
    text-align: center;
    line-height: 1.3;
  }

  .header__menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .header__menu-item {
    display: flex;
    justify-content: center;
  }

  .header__menu-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    padding: 0.75rem;
    color: rgb(255 255 255 / 0.7);
    text-decoration: none;
    border-radius: 8px;
    transition: color 0.2s, background-color 0.2s;
  }

  .header__menu-link:hover {
    color: #fff;
    background-color: rgb(255 255 255 / 0.1);
  }

  .header__icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header__icon :global(svg) {
    width: 20px;
    height: 20px;
  }

  .header__label {
    font-size: 0.625rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ================================
     Mobile Hamburger
     ================================ */
  .header__mobile {
    display: none;
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 50;
  }

  @media (max-width: 767px) {
    .header__mobile {
      display: block;
    }
  }

  .header__hamburger {
    list-style: none;
    cursor: pointer;
    width: 48px;
    height: 48px;
    background-color: var(--color-primary);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 5px;
    box-shadow: 0 2px 8px rgb(0 0 0 / 0.15);
  }

  .header__hamburger-line {
    display: block;
    width: 20px;
    height: 2px;
    background-color: #fff;
    transition: transform 0.2s, opacity 0.2s;
  }

  .header__mobile[open] .header__hamburger-line:nth-child(1) {
    transform: rotate(45deg) translateY(5px);
  }

  .header__mobile[open] .header__hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .header__mobile[open] .header__hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translateY(-5px);
  }

  .header__dropdown {
    position: absolute;
    top: 56px;
    left: 0;
    width: 200px;
    background-color: var(--color-bg-main);
    border: 1px solid var(--color-bg-section);
    border-radius: 8px;
    box-shadow: 0 4px 12px rgb(0 0 0 / 0.15);
  }

  .header__dropdown-list {
    list-style: none;
    margin: 0;
    padding-block: 0.5rem;
    padding-inline: 0;
  }

  .header__dropdown-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding-block: 0.75rem;
    padding-inline: 1rem;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s, background-color 0.2s;
  }

  .header__dropdown-link:hover {
    color: var(--color-primary);
    background-color: var(--color-bg-section);
  }

  .header__dropdown-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
  }

  .header__dropdown-icon :global(svg) {
    width: 18px;
    height: 18px;
  }
</style>
