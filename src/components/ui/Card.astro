---
interface Props {
  title: string;
  description: string;
  icon?: string;
  class?: string;
}

const { title, description, icon, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-shadow ${className}`.trim()}>
  {icon && (
    <div class="text-4xl mb-4" aria-hidden="true">
      {icon}
    </div>
  )}
  <h3 class="text-xl font-bold text-text mb-2">{title}</h3>
  <p class="text-text-muted">{description}</p>
  <slot />
</div>
