---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { ExternalLink } from 'lucide-astro';

interface Props {
	title: string;
	category: string;
	description: string;
	url: string;
	image: ImageMetadata;
}

const { title, category, description, url, image } = Astro.props;
---

<article class="work-card w-275px shrink-0 snap-center rounded-16px bg-white shadow-card overflow-hidden md:w-full">
	<a href={url} target="_blank" rel="noopener noreferrer" class="block no-underline text-inherit h-full group">
		<div class="aspect-card overflow-hidden">
			<Image
				src={image}
				alt={title}
				width={373}
				format="webp"
				quality={80}
				loading="lazy"
				class="w-full h-full object-cover object-top"
			/>
		</div>
		<div class="flex flex-col gap-8px px-16px pb-16px pt-12px md:px-24px md:pb-24px md:pt-16px">
			<div class="flex justify-between items-center">
				<span class="inline-block text-xs font-semibold text-primary bg-tag-site px-12px py-7px rounded-full">
					{category}
				</span>
				<ExternalLink
					class="text-text-muted transition-colors duration-200 group-hover:text-primary"
					size={16}
				/>
			</div>
			<div class="flex flex-col gap-3px">
				<h3 class="text-xl font-bold text-text leading-snug">{title}</h3>
				<p class="text-sm text-text-muted leading-relaxed">{description}</p>
			</div>
		</div>
	</a>
</article>
