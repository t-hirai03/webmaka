---
interface Props {
	type?: 'text' | 'email' | 'tel';
	name: string;
	id?: string;
	placeholder?: string;
	required?: boolean;
	class?: string;
}

const {
	type = 'text',
	name,
	id,
	placeholder,
	required = false,
	class: className = '',
} = Astro.props;

const baseClasses =
	'w-full bg-white rounded-lg px-4 py-3 text-text border border-gray-300 focus:ring-2 focus:ring-accent focus:border-transparent focus:outline-none transition-colors duration-200';

const classes = [baseClasses, className].filter(Boolean).join(' ');
---

<input
  type={type}
  name={name}
  id={id || name}
  placeholder={placeholder}
  required={required}
  class={classes}
/>
