---
interface Props {
	title: string;
	subtitle?: string;
	class?: string;
}

const { title, subtitle, class: className = '' } = Astro.props;
---

<div class={`text-center ${className}`.trim()}>
  <h2 class="text-section-title font-bold leading-tight text-text">{title}</h2>
  {subtitle && (
    <p class="mt-1 text-section-subtitle text-text-muted">{subtitle}</p>
  )}
</div>
